{
  "compilerOptions": {
    "declaration": true,
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "strictBuiltinIteratorReturn": false /** https://github.com/isaacs/node-lru-cache/issues/348#issuecomment-2296786407 */
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true
  }
}
